<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_emergency_phone_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.natalie.test2.EmergencyPhonePage"
    android:backgroundTint="@color/cast_expanded_controller_text_color">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <Button
            android:text="Call 911"
            android:layout_width="match_parent"
            android:id="@+id/button2"
            android:layout_weight="0.13"
            android:backgroundTint="#b22222"
            android:onClick="call911"
            android:layout_height="190dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <Button
            android:text="Call National Domestic Abuse Hotline"
            android:layout_width="match_parent"
            android:id="@+id/button3"
            android:layout_weight="0.02"
            android:backgroundTint="#b22222"
            android:onClick="callHotline"
            android:layout_height="190dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <ImageButton
                android:layout_width="82dp"
                android:layout_height="69dp"
                app:srcCompat="@drawable/home"
                android:id="@+id/imageButton5"
                android:scaleType="fitCenter"
                android:layout_weight="0.04"
                android:onClick="sendHomePage"
                android:background="@color/cast_expanded_controller_text_color" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.97" />

            <ImageButton
                android:layout_width="85dp"
                android:layout_height="69dp"
                app:srcCompat="@drawable/pizza"
                android:id="@+id/imageButton6"
                android:onClick="sendPizza"
                android:scaleType="fitCenter"
                android:layout_weight="0.06"
                android:background="@color/cast_expanded_controller_text_color" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
